@startuml
left to right direction
actor User
actor HotelSystem
rectangle "Система бронирования отелей" {
    User ---> (Поиск номеров)
    (Поиск номеров) .. (Показать доступные номера): Include   
    User --> (Бронирование)
    (Бронирование) .. (Подтвердить бронирование): Include 
    HotelSystem ..> (Подтвердить бронирование) : дополняет
    User --> (Отмена бронирования)
    (Отмена бронирования) .. (Подтвердить отмену) : Include 
    HotelSystem ..> (Подтвердить отмену): дополняет
    User ---> (Оплата)
    (Оплата) .. (Подтвердить оплату): Include 
  HotelSystem ..> (Подтвердить оплату): дополняет
    User --> (Регистрация пользователя)
    (Регистрация пользователя) .. (Создать учетную запись) :Include 
}
@enduml
